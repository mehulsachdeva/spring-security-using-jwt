create table users(user_id int auto_increment not null primary key, username varchar(30), password varchar(255), role varchar(10));
insert into users (username, password, role) values ("mehulsachdeva", "mehul1234", "MANAGER");
insert into users (username, password, role) values ("abcd", "abcd1234", "EMPLOYEE");

create table employees(employer_id int primary key auto_increment, first_name varchar(50), last_name varchar(50), age int, department varchar(30), salary bigint, date_of_joining datetime);